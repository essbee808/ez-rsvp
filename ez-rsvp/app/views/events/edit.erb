<h3 class="heading">Update Event</h3>
<form action="/events/<%= @event.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <label>Name:</label>
    <input type="text" name="event[name]" id="event_name" value="<%= @event.name %>">
    <br>
  <label>Location:</label>
    <input type="text" name="event[location]" id="event_location">
    <br>
  <label>Date:</label>
    <input type="date" name="event[event_date]" id="event_date">
    <br>
  <label>Start:</label>
    <input type="time" name="event[start_time]" id="event_start">
    <br>
  <label>End:</label>
    <input type="time" name="event[end_time]" id="event_end">
    <br>
  <input type="submit" value="Update" class="submit-button">
</form>